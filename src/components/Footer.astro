<style>
    .footer {
        background: #000;
        padding: 60px 0 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4rem;
        flex-wrap: wrap;
        gap: 3rem;
    }

    .footer-logo {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        letter-spacing: -1px;
    }

    .logo-sub {
        font-weight: 300;
        opacity: 0.7;
    }

    .footer-tagline {
        color: var(--color-accent);
        font-weight: 600;
        font-style: italic;
    }

    .footer-contact h3 {
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .contact-link {
        display: flex;
        align-items: center;
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        transition: color 0.3s ease;
    }

    .contact-link:hover {
        color: var(--color-accent);
    }

    .contact-link .icon {
        font-size: 0.9rem;
        background: #25d366;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        margin-right: 1rem;
    }

    .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--color-text-muted);
        font-size: 0.9rem;
    }
</style>
