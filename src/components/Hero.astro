---
interface Props {
    characterImage?: string;
}

const { characterImage = "/eonet.avif" } = Astro.props;
---

<section id="home" class="hero">
    <div class="container hero-container">
        <div class="hero-content">
            <div class="badge fade-in">Solusi WiFi Cerdas</div>
            <h1 class="hero-title fade-in delay-100">
                Nikmati Internet <br />
                <span class="text-gradient">Bebas Batas, Cepat</span>
                <br />
                & Tanpa Lag
            </h1>
            <p class="hero-subtitle fade-in delay-200">
                Solusi WiFi cerdas untuk Rumah & Bisnis Anda. Koneksi stabil,
                1:1, tanpa FUP atau Unlimited.
            </p>

            <div class="hero-actions fade-in delay-300">
                <a href="#packages" class="btn btn-primary">Lihat Paket</a>
                <a href="#contact" class="btn btn-accent">Pasang Sekarang</a>
            </div>

            <div class="hero-stats fade-in delay-300">
                <div class="stat-item">
                    <span class="stat-value">1:1</span>
                    <span class="stat-label">Kecepatan</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">âˆž</span>
                    <span class="stat-label">Tanpa FUP</span>
                </div>
            </div>
        </div>

        <div class="hero-image slide-up delay-200">
            <div class="image-glow"></div>
            <img
                src={characterImage}
                alt="EONET Technician"
                class="character-img"
            />
        </div>
    </div>
</section>

<style>
    .hero {
        padding-top: 120px;
        padding-bottom: 60px;
        min-height: 90vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(107, 70, 193, 0.2);
        border: 1px solid rgba(107, 70, 193, 0.5);
        border-radius: 50px;
        color: var(--color-primary);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1.5rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        margin-bottom: 2.5rem;
        max-width: 500px;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
    }

    .hero-stats {
        display: flex;
        gap: 3rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--color-text-muted);
    }

    .hero-image {
        position: relative;
        display: flex;
        justify-content: center;
    }

    .character-img {
        max-width: 100%;
        height: auto;
        filter: drop-shadow(0 0 20px rgba(0, 0, 0, 0.5));
        position: relative;
        z-index: 2;
        mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
    }

    .image-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        height: 300px;
        background: var(--color-primary);
        filter: blur(100px);
        opacity: 0.4;
        z-index: 1;
        border-radius: 50%;
    }

    @media (max-width: 768px) {
        .hero-container {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 3rem;
        }

        .hero-subtitle {
            margin-left: auto;
            margin-right: auto;
        }

        .hero-actions {
            justify-content: center;
        }

        .hero-stats {
            justify-content: center;
        }

        .hero-title {
            font-size: 2.5rem;
        }
    }
</style>
